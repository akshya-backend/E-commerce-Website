<!DOCTYPE html>
<html lang="en">

<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/login.css">
    <title>login page</title>
    <script src="/errorHandling.js"></script>

</head>
<body>
        <section>
            <div class="form-box">
                <div class="form-value">
                    
                    <form action="/postlogin" method="post">
                     
                        <h2>Login</h2>
                        <div class="inputbox">
                            <ion-icon name="mail-outline"></ion-icon>
                             <input type="email" class="form-control" name="email" placeholder="Enter Your Email" required>
                        
                        </div>
                        <div class="inputbox">
                            <ion-icon name="lock-closed-outline"></ion-icon>
                            <input type="password" class="form-control" name="password"  placeholder="Enter Your Password" required>
                           
                        </div>
                        <div class="forget">
                            <label for=""><a href="/forgetPassword">Forget Password</a></label>

                        </div>
                        <button>Log in</button>
                        <div class="register">
                            <p style="color:black">Don't have a account</p><a class="signupp" href="/signup">Signup</a> 
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </form>
    <% if (typeof error !== 'undefined' && error) { %>
        <script>
            showErrorNotification('<%= error %>'); // Call showErrorNotification with error message
        </script>
    <% } %>
    <% if (typeof success !== 'undefined' && success) { %>
        <script>
            showErrorNotification('<%= success %>'); // Call showErrorNotification with error message
        </script>
    <% } %>
</body>

</html>