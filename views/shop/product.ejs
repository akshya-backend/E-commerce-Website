<!DOCTYPE html>
<html lang="en">

<head>
  <!-- basic -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta http-equiv="Content-Type" content="text/css; charset=utf-8">

  <!-- mobile metas -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="viewport" content="initial-scale=1, maximum-scale=1">
  <title>Products</title>
   <link href="https://use.fontawesome.com/releases/v5.0.1/css/all.css" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
  <link rel="stylesheet" href="/css/product.css">

</head>
<body>
     <nav  class="navbar">
        <div  style="min-width: 100%;" class="container d-flex align-items-center justify-content-between">
            <form  style="width: 50%;" class="search-form" action="/search" method="post">
                <input class="search-input" type="text" placeholder="Search for products" name="productName" >
                <button type="submit" style="background-color: white; border:none;" class="search-icon"><i class="fas fa-search"></i></button>
            </form>
            <a class="cart-icon" href="/getcart">
                <i class="fas fa-shopping-cart"></i>
                <span id="count" class="cart-item-count">
                    <% if (isAuth) { %>
                        <%=user.cart.items.length   %>
                    <% } %>
                </span>
            </a>
            <a  style="font-size:large;"class="contact-link" href="/contactUs"><i style="font-size: x-large;" class="fas fa-envelope"></i> Contact Us</a>
            <% if (!isAuth) { %>
                <a style="font-size: large; color: #d39e00;"  href="/login">
                    Login / Sign Up
                </a>
            <% } else { %>
                <div class="account-link">
                    <i class="fas fa-user-circle account-icon" style="font-size: x-large;"></i>
                    <a style="font-size: large;" href="/profile">My Account</a>
                </div>
            <% } %>
            <% if (isAdmin) { %>
                <a class="af" style="margin-bottom: 2px;" href="/admin">
                    <i class="fa fa-cog" style="font-size: x-large;"></i>
                     <span style="font-weight:bolder; font-size: large;">Admin</span>
                </a>
            <% } %>
        </div>
    </nav>
  <div id="project" style="padding-top: 10px" class="project">
   <div class="container">

      <div class="titlepage">
         <h2><%= products?.category?.category_type %></h2>
      </div>
      <div class="product_main">
         <div class="row">
            <% if (  products && products.length > 0 ) { %>
                <% products.forEach((e) => { %>      
                  
             <div class="col-lg-4 col-md-6 mb-4" style="max-width: 300px;">
                 <div class="project_box" style="border: 1px solid #ddd; border-radius: 10px; overflow: hidden; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
                     <div class="card-body">
                        <img src="<%=e.image  %>" alt="" style="max-width: 100%; max-height: 150px; border-radius: 10px 10px 0 0;">
                     <div class="product-details" style="padding: 20px;">
                     <h5 class="card-title" style="font-size: 24px; margin: 10px 0; color: #333;"><%= e.product_name %></h5></h5>
                     <p class="card-text" style="font-size: 18px; margin: 0; color: #666;"> <span>&#8377;</span><%= e.product_price %></p>
                     <button type="submit" id="<%=e._id %>" class="submit">
                     Buy
                     </button>
                      </div>
                  </div>
               </div>
               </div>
                    <% }) %>
              <% } else { %> 
                 <h1>No Product Found</h1>
           <%  } %>
         
         </div>
      </div>
   </div>
</div>
<script type="module" src="/script/product2cart.js"></script>
</body>

</html>